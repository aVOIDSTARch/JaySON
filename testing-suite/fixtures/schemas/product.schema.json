{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Product",
    "description": "A product in the catalog",
    "type": "object",
    "properties": {
        "sku": {
            "type": "string",
            "description": "Stock keeping unit",
            "pattern": "^[A-Z]{3}-[0-9]{4}$"
        },
        "name": {
            "type": "string",
            "description": "Product name",
            "minLength": 1
        },
        "description": {
            "type": "string"
        },
        "price": {
            "type": "number",
            "description": "Product price",
            "minimum": 0,
            "exclusiveMinimum": 0
        },
        "quantity": {
            "type": "integer",
            "minimum": 0,
            "default": 0
        },
        "category": {
            "type": "string",
            "enum": ["electronics", "clothing", "food", "other"]
        },
        "tags": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "uniqueItems": true
        },
        "variants": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "color": {
                        "type": "string"
                    },
                    "size": {
                        "type": "string"
                    },
                    "priceModifier": {
                        "type": "number"
                    }
                },
                "required": ["color"]
            }
        },
        "inStock": {
            "type": "boolean"
        }
    },
    "required": ["sku", "name", "price"]
}
