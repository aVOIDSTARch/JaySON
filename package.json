{
  "name": "jayson",
  "version": "1.0.0",
  "description": "A TypeScript utility for working with JSON schemas, validating data, and creating JSON files.",
  "type": "module",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "bin": {
    "jayson": "./dist/esm/cli.js"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/cjs/index.d.ts",
        "default": "./dist/cjs/index.js"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run build:esm && npm run build:cjs",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:watch": "tsc -p tsconfig.esm.json --watch",
    "prepublishOnly": "npm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run testing-suite/unit",
    "test:integration": "vitest run testing-suite/integration",
    "test:cli": "vitest run testing-suite/cli",
    "test:all": "npm run build && npm run test",
    "docs": "typedoc",
    "docs:watch": "typedoc --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aVOIDSTARch/JaySON.git"
  },
  "keywords": [
    "json",
    "schema",
    "validation",
    "typescript"
  ],
  "author": "aVOIDSTARch",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@vitest/coverage-v8": "^4.0.16",
    "typedoc": "^0.28.15",
    "typescript": "^5.3.0",
    "vitest": "^4.0.16"
  },
  "bugs": {
    "url": "https://github.com/aVOIDSTARch/JaySON/issues"
  },
  "homepage": "https://github.com/aVOIDSTARch/JaySON#readme"
}
